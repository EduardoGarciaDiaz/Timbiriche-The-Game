<UserControl x:Class="TimbiricheViews.Components.Match.XAMLMessageItemComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimbiricheViews.Components.Match"
             mc:Ignorable="d" Height="50" Width="194">

    <Border x:Name="borderMessage" BorderBrush="LightGray" Background="#EDEDED" BorderThickness="1" CornerRadius="7" Margin="5" HorizontalAlignment="Left" Padding="5" Width="181">
        <StackPanel>
            <TextBlock x:Name="tbkSenderUsername" Foreground="#32B3C2" FontFamily="Inter" FontSize="12"/>
            <Border>
                <TextBlock x:Name="tbkMessage" FontFamily="Inter" FontSize="12" FontWeight="Bold"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
